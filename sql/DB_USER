--drop user provectus;
CREATE USER provectus IDENTIFIED BY "provectus";
GRANT CONNECT,RESOURCE,DBA TO provectus;
GRANT CREATE SESSION , GRANT ANY PRIVILEGE TO provectus;
GRANT UNLIMITED TABLESPACE TO provectus;
GRANT create table to provectus;
GRANT
     CREATE ANY MATERIALIZED VIEW
   , ALTER ANY MATERIALIZED VIEW
   , DROP ANY MATERIALIZED VIEW
   , QUERY REWRITE
   , GLOBAL QUERY REWRITE
   TO provectus;
GRANT
     CREATE ANY TABLE
   , ALTER ANY TABLE
   , DROP ANY TABLE
   , QUERY REWRITE
   , GLOBAL QUERY REWRITE
   TO provectus;
GRANT
     CREATE ANY VIEW
   , DROP ANY VIEW
   , QUERY REWRITE
   , GLOBAL QUERY REWRITE
   TO provectus;
ALTER USER provectus DEFAULT TABLESPACE users;
COMMIT;
